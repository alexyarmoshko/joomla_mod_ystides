<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
	<name>Yak Shaver Tides</name>
	<author>Yak Shaver</author>
	<creationDate>2025-12-28</creationDate>
	<copyright>(C) 2025 Yak Shaver https://www.kayakshaver.com</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>me@kayakshaver.com</authorEmail>
	<authorUrl>https://www.kayakshaver.com</authorUrl>
	<version>1.0.2</version>
	<description>MOD_YSTIDES_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Module\Ystides</namespace>
	<files>
		<folder module="mod_ystides">services</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/mod_ystides.ini</language>
		<language tag="en-GB">language/en-GB/mod_ystides.sys.ini</language>
	</languages>
	<media folder="media" destination="mod_ystides">
		<folder>css</folder>
		<folder>images</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic" label="COM_MODULES_BASIC_FIELDSET_LABEL">
				<field
					name="station_id"
					type="list"
					label="MOD_YSTIDES_FIELD_STATION_LABEL"
					description="MOD_YSTIDES_FIELD_STATION_DESC"
					default=""
					filter="string"
					>
					<option value="">MOD_YSTIDES_OPTION_SELECT_STATION</option>
					<option value="Achill_Island_MODELLED">Achill Island</option>
					<option value="Aranmore">Aranmore</option>
					<option value="Arklow">Arklow</option>
					<option value="Ballycotton">Ballycotton</option>
					<option value="Ballyglass">Ballyglass</option>
					<option value="Bray_Harbour_MODELLED">Bray Harbour</option>
					<option value="Buncranna">Buncranna</option>
					<option value="Carrigaholt_MODELLED">Carrigaholt</option>
					<option value="Castletownbere">Castletownbere</option>
					<option value="Clare_Island_MODELLED">Clare Island</option>
					<option value="Crosshaven_MODELLED">Crosshaven</option>
					<option value="Dingle">Dingle</option>
					<option value="Dublin_Port">Dublin Port</option>
					<option value="Dungarvan_MODELLED">Dungarvan</option>
					<option value="Dunmore">Dunmore</option>
					<option value="Fenit">Fenit</option>
					<option value="Galway">Galway</option>
					<option value="Howth">Howth</option>
					<option value="Inishmore">Inishmore</option>
					<option value="Killary_Harbour_MODELLED">Killary Harbour</option>
					<option value="Killybegs">Killybegs</option>
					<option value="Kilrush">Kilrush</option>
					<option value="Kinsale_MODELLED">Kinsale</option>
					<option value="Lahinch_MODELLED">Lahinch</option>
					<option value="Letterfrack_MODELLED">Letterfrack</option>
					<option value="Malin_Head">Malin Head</option>
					<option value="Port_Oriel">Port Oriel</option>
					<option value="Ringaskiddy">Ringaskiddy</option>
					<option value="Roonagh">Roonagh</option>
					<option value="Rossaveel">Rossaveel</option>
					<option value="Rosslare">Rosslare</option>
					<option value="Skerries">Skerries</option>
					<option value="Sligo">Sligo</option>
					<option value="Tom_Clarke_Bridge">Tom Clarke Bridge</option>
					<option value="Tory_Island_MODELLED">Tory Island</option>
					<option value="Union_Hall">Union Hall</option>
					<option value="Wexford">Wexford</option>
					<option value="Wicklow_MODELLED">Wicklow</option>
				</field>

				<field
					name="days_range"
					type="number"
					label="MOD_YSTIDES_FIELD_DAYS_RANGE_LABEL"
					description="MOD_YSTIDES_FIELD_DAYS_RANGE_DESC"
					default="7"
					filter="integer"
					validate="number"
					min="1"
					max="14"
				/>
			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
					validate="CssIdentifier"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="0"
					filter="integer"
					validate="options"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" name="Yak Shaver Tides Updates">https://raw.githubusercontent.com/alexyarmoshko/joomla_mod_ystides/refs/heads/main/mod_ystides.update.xml</server>
	</updateservers>
</extension>
